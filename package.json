    "@vueuse/motion": "^3.0.3",
    "focus-trap": "^7.6.6",
    "rollup-plugin-visualizer": "^6.0.5",
    "swiper": "^12.0.3",
    "vee-validate": "^4.15.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-image-optimizer": "^2.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.11",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.37.0",
    "eslint-plugin-vue": "~10.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^15.5.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "sharp": "^0.34.5",
    "svgo": "^4.0.0",
    "typescript": "~5.9.0",
    "vite": "^7.1.11",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vue-tsc": "^3.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue}": [
      "eslint --fix --cache"
    ],
    "*.{css,scss,md,json,yml,yaml}": [
      "prettier --write"
    ]
  }
